<%- include("partials/header") %>


  <body>
    <div class="container mt-5">
        <div class="row justify-content-center mt-5">
            <h1>Welcome to My Site!</h1>
        </div>
        <div class="row m-5">

            <h5>Search for a user:</h5>
            <form>
              <div class="form-group">
                <input class="form-control" type="text" id="search" placeholder="Enter name you want to search">
              </div>
            </form>
            
        </div>
    </div>

   
  </body>


  <script>
    $(function(){
      $('#search').autocomplete({
        source: function(req, res){

          $.ajax({
            url:'/autocomplete',
            dataType:'jsonp',
            type:'GET',
            data:req,
            success: function(data){
              res(data);
                console.log(data);
            },
            error: function(err){
              console.log(err.status);
            }
          });
        },

        minLength:1,
        select: function(event,ui){
          if(ui.item){
            $('#search').text(ui.item.label);
          }
        }
      })
    })
  </script>